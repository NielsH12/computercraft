tArgs = { ... }
os.loadAPI("n")
if #tArgs == 0 then
	number = 0
else
	number = tonumber(tArgs[1])
end

function window()
	n.forward(1,'f')
	for i = 1,6,1 do
		if i ~=1 then
			if i ~= 6 then turtle.dig() end
		end
		n.down(1,'f')
	end

	n.left()
	n.forward(1,'f')
	n.right()
	
	for i = 1,6,1 do
		n.up(1,'f')
		if i ~=1 then
			if i ~= 6 then turtle.dig() end
		end
	end
	
	n.left()
	n.forward(1,'f')
	n.right()
	
	for i = 1,6,1 do
		if i ~=1 then
			if i ~= 6 then turtle.dig() end
		end
		n.down(1,'f')
	end
	
	n.back()
	n.up(6)
	n.right()
	n.forward(2)
	n.left()
	
end

	window()
for i = 1,number,1 do
	n.left()
	n.forward(6)
	n.right()
	window()
end
