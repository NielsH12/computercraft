shell.run("t")

function freeSpaceInInventory()
	for i = 1, 16, 1 do
		if (getItemCount(i) == 0) then
			return true
		end
	end
	return false
end

function emptyChest()
	while (suck()) do end
	if (freeSpaceInInventory()) then
		return true
	else
		return false
	end
end

function selectItem(item)
	for i = 1, 16, 1 do
		d = getItemDetail(i)
		if not (d == nill) then
			if (d.name == item) then
				select(i)
				return true
			end
		end
	end
	return false
end

function placeDirt()
	print("placeDirt")
	selectItem("minecraft:dirt")
	down(1, true, true)
	placeDown(nill, true)
	up(1, true, true)
end

function gotoNewPlace()
	print("gotoNewPlace")
	forward(5, true, true)
end

function placeTree()
	print("placeTree")
	selectItem("minecraft:sapling")
	placeDown(nill, true)
end

function chopTree()
	print("chopTree")
	up(5, true, true)
	while not (detectDown()) do
		if (down()) then
			if detectDown() then
				up(1, true, true)
				return true
			else
				up()
			end
		end
		os.sleep(10)
	end
	down(5, true, true)
	digDown()
end

function craftFloor()
	print("craftFloor")
	if (selectItem("minecraft:sapling")) then
		dropDown()
	end
	craft()
	suckDown()
end

function buildFloor()
	print("buildFloor")
	forward(1, true, true)
	down(1, true, true)
	left()
	selectItem("minecraft:planks")
	for i = 1, 4, 1 do
		placeDown()
		forward(1, true, true)
		left()
		placeDown()
		forward(1, true, true)
	end
	left()
	up(1, true, true)
	forward(1, true, true)
	left()
	left()
end

function chopRow(l)
	if (l == nill) then
		l = 1
	end
	for i = 1, l, 1 do
		digUp()
		digDown()
		forward(1, true, true)
	end
end

function chopLeaves()
	print("chopLeaves")
	up(3, true, true)
	forward(2, true, true)
	left()
	forward(2, true, true)
	left()
	for i = 1, 2, 1 do
		for j = 1, 2, 1 do
			digRow(4)
			left()
			digRow(1)
			left()
			digRow(4)
			right()
			digRow(1)
			right()
		end
		digRow(4)
		if (i == 1) then
			down(1, true, true)
		end
		right()
		right()
	end
	right()
	forward(2, true, true)
	right()
	forward(2, true, true)
	right()
	right()
end

function suckLeaves()
	print("suckLeaves")
	forward(2, true, true)
	left()
	forward(2, true, true)
	left()
	for j = 1, 2, 1 do
		suckDown()
		left()
		suckDown()
		left()
		suckDown()
		right()
		suckDown()
		right()
	end
	suckDown()
	right()
	forward(2, true, true)
	right()
	forward(2, true, true)
end
