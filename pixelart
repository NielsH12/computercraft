os.loadAPI("n")

dofile "art"

print("Expected items: ")

for i = 1,8,2 do
	print(i .. ": " .. description[i] .. ", " .. i+1 .. ": " .. description[i+1])
end

print("Press any key to continue")
os.pullEvent( "key" )

function layer(index)

	for i = 1, table.getn(pixelImage[index]), 1 do
		if pixelImage[index][i] ~= 0 then
			turtle.select(pixelImage[index][i])
			while turtle.getItemCount() <= 1 do sleep(1) end
			turtle.placeDown()
		end
		n.forward()
	end

end

function layer1(index)

		for i = table.getn(pixelImage[index]), 1, -1 do
		if pixelImage[index][i] ~= 0 then
			turtle.select(pixelImage[index][i])
			while turtle.getItemCount() <= 1 do sleep(1) end
			turtle.placeDown()
		end
		n.forward()
	end

end

function picture()

	for i = table.getn(pixelImage[1]), 1, -1 do
		
		if i % 2 == 1 then
			layer(i)
		else
			layer1(i)
		end
		n.up()
		n.right(2)
		n.forward()
	end
end

picture()